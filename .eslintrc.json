{
	"env": {
        "node": true,
		"es6": true,
        "mocha": true
	},
	"extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
    "plugins": ["prettier", "eslint-plugin-import", "eslint-import-resolver-node"],
	"rules": {
        "prettier/prettier": ["error"],
		"node/no-unpublished-import": ["error", {"allowModules": ["mocha", "chai", "supertest"]}]
	}
}
